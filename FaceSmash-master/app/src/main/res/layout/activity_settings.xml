<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.facesmash.SettingsActivity"
    android:background="@android:color/background_dark">

    <TextView
        android:text="CHOOSE MUSIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        android:background="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textAlignment="center" />

    <Button
        android:text="ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOn"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOff"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Tobaggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBag"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/buttonTurn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Default "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/buttonDefault"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Don't Turn Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTurn"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/buttonDefault"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/sunset"
        android:id="@+id/imageViewSunset"
        android:layout_above="@+id/buttonOff"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_height="175dp" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/penguin"
        android:id="@+id/imageViewPenguin"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/buttonOff"
        android:layout_height="175dp" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/drum"
        android:id="@+id/imageViewDrums"
        android:visibility="invisible"
        android:layout_above="@+id/buttonOff"
        android:layout_centerHorizontal="true"
        android:layout_height="175dp" />

</RelativeLayout>
